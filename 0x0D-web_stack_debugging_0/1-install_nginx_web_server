#!/usr/bin/env bash

# Update package list and install Nginx
apt-get update -y
apt-get install -y nginx

# Create default Nginx configuration to serve "Hello World!"
echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    location / {
        echo 'Hello World!';
    }
}" > /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart

# Exit with success
exit 0
